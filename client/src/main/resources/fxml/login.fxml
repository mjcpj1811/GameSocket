<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
      fx:controller="client.ui.LoginController" spacing="12" alignment="CENTER"
      stylesheets="@/css/styles.css" prefWidth="420" prefHeight="320" styleClass="card">
    <Label text="MemoryGame" styleClass="title"/>
    <TextField fx:id="txtUser" promptText="Username" maxWidth="260"/>
    <PasswordField fx:id="txtPass" promptText="Password" maxWidth="260"/>
    <Button text="Login" fx:id="btnLogin" onAction="#onLogin" styleClass="primary" maxWidth="260"/>
    <Label fx:id="lblStatus" styleClass="muted"/>
</VBox>
